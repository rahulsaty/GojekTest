<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="android.view.View" />

        <variable
            name="data"
            type="com.test.gojek.net.model.Repository" />

    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            loadImage="@{data.avatar}"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_toRightOf="@+id/user_icon"
            android:fontFamily="@font/roboto"
            android:textColor="@color/color_525753"
            android:text="@{data.name}"
            android:textSize="@dimen/textsize_12dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_6dp"
            android:layout_toRightOf="@+id/user_icon"
            android:fontFamily="@font/roboto_medium"
            android:text="@{data.author}"
            android:textColor="@color/color_525753"
            android:textSize="@dimen/font_size_15dp" />

        <RelativeLayout
            android:id="@+id/detailLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_toRightOf="@id/user_icon"
            android:visibility="@{data.expanded? View.VISIBLE : View.GONE}">

            <TextView
                android:id="@+id/detailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_16dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/color_525753"
                android:text="@{data.description}"
                android:textSize="@dimen/textsize_12dp" />

            <TextView
                android:id="@+id/lang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailText"
                android:layout_alignParentLeft="true"
                android:layout_marginEnd="@dimen/margin_20dp"
                android:drawableStart="@drawable/red_dot"
                android:text="@{data.language}"
                android:drawablePadding="4dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/color_525753"
                android:textSize="@dimen/textsize_12dp" />

            <TextView
                android:id="@+id/vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailText"
                android:layout_toEndOf="@+id/lang"
                android:layout_marginEnd="@dimen/margin_20dp"
                android:text="@{Long.toString(data.stars)}"
                android:drawableStart="@drawable/star_yellow"
                android:fontFamily="@font/roboto"
                android:textColor="@color/color_525753"
                android:textSize="@dimen/textsize_12dp" />

            <TextView
                android:id="@+id/frok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailText"
                android:layout_toEndOf="@+id/vote"
                android:layout_marginEnd="@dimen/margin_20dp"
                android:text="@{Long.toString(data.forks)}"
                android:drawableStart="@drawable/fork_black"
                android:fontFamily="@font/roboto"
                android:textColor="@color/color_525753"
                android:textSize="@dimen/textsize_12dp" />


        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent" />
</LinearLayout>
</layout>